<excelImportConfiguration>
  <sheetName>sheet</sheetName>
  <startCell>A2</startCell>
  <tableWithHeader>true</tableWithHeader>
  <splitValues>true</splitValues>
  <workItemRules>
    <workItemRule>
      <workItemTypeId>test_script_UAT</workItemTypeId>
      <fieldRules>
        <fieldRule>
          <column>Title</column>
          <field>title</field>
        </fieldRule>
        <fieldRule>
          <column>Description</column>
          <field>description</field>
        </fieldRule>
        <fieldRule>
          <column>Step Name</column>
          <field>teststep.testStep</field>
        </fieldRule>
        <fieldRule>
          <column>Step Instruction</column>
          <field>teststep.description</field>
        </fieldRule>
        <fieldRule>
          <column>Expected Result</column>
          <field>teststep.expectedResult</field>
        </fieldRule>
      </fieldRules>
      <testStepsImport>
        <importFromSeparateRows>false</importFromSeparateRows>
      </testStepsImport>
    </workItemRule>
  </workItemRules>
</excelImportConfiguration>