<?xml version="1.0" encoding="UTF-8"?>
<read-only>
    <status id="approved">
        <field id="@all"/>
        <field id="-status"/>
    </status>

    <status id="closed">
        <field id="@all"/>
        <field id="-linkedWorkItems"/>
        <field id="-status"/>
    </status>

    <status id="in_approval">
        <field id="@all"/>
        <field id="-approvals"/>
    </status>

    <status id="deferred">
        <field id="@all"/>
        <field id="-status"/>
        <field id="-assignee"/>
    </status>

    <status id="in_draft">
        <field id="approvals"/>
        <field id="version"/>
    </status>

</read-only>