<?xml version="1.0" encoding="UTF-8"?>
<formLayout xmlns="http://polarion.com/schema/WorkItems/FormLayout" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://polarion.com/schema/WorkItems/FormLayout">
	<horizontal>
		<vertical>
			<section>
				<field id="type"/>
				<field id="testType"/>
				<field id="project"/>
				<field id="author"/>
				<field id="categories"/>
			</section>
		</vertical>
		<vertical>
			<section>				
				<field id="severity"/>
				<field id="assignee"/>
				<field id="status"/>
				<field id="resolution"/>
				<field id="testCaseID"/>
			</section>
		</vertical>
	</horizontal>
	<field id="description"/>
	<field id="testSteps"/>
        <extension id="execute-test" label="Execute Test"/>
	<extension counts="1,5,10" id="test-records" label="Test Records"/>
	<field id="linkedWorkItems"/>
	<field id="comments"/>
	<field id="approvals"/>
	<field id="hyperlinks"/>
	<field id="attachments"/>
	<field id="watches"/>
</formLayout>